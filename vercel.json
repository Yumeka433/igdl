{
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/next" },
    { "src": "api/*.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ],
  "functions": {
    "api/*.py": {
      "runtime": "vercel-python@0.9.1"
    }
  }
}